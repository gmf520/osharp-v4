@{
    ViewBag.Title = "实体数据信息列表";
    Layout = "~/Areas/Admin/Views/Shared/_DataGridLayout.cshtml";
    ViewBag.ToolbarItem = "edit,cancel,save";

    ViewBag.GridId = "entityInfos";
    ViewBag.GridDataUrl = Url.Action("GridData");
    ViewBag.EditUrl = Url.Action("Edit");
}
@section customScript
{
    <script type="text/javascript">
        columns = [
            [
                { field: "Name", title: "实体名称", width: 200, sortable: true },
                { field: "ClassName", title: "实体类型名称", width: 300, sortable: true },
                {
                    field: "DataLogEnabled",
                    title: "数据日志",
                    width: 80,
                    sortable: true,
                    align: "center",
                    formatter: formatBoolean,
                    editor: { type: "combobox", options: { required: true, data: $.osharp.data.bool, valueField: "id" } }
                }
            ]
        ];
        multiSort = true;
        //启用数据查询
        enableFilterData = true;
        filterData = [
            { field: "Name", type: "text", op: ["equal", "notequal", "contains", "beginwith", "endwith"] },
            { field: "ClassName", type: "text", op: ["equal", "notequal", "contains", "beginwith", "endwith"] },
            { field: "DataLogEnabled", type: "combobox", op: ["equal", "notequal"], options: { valueField: "id", data: $.osharp.data.bool } }
        ];
    </script>
}